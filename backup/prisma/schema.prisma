// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  email         String    @unique
  name          String?
  image         String?
  googleId      String?   @unique
  whatsappNumber String?
  loyaltyPoints Int       @default(0)
  referralCode  String    @unique @default(cuid())
  isAdmin       Boolean   @default(false)
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  orders        Order[]
  subscriptions Subscription[]
  referrals     Referral[]     @relation("Referrer")
  referredBy    Referral[]     @relation("Referred")
  reviews       Review[]
  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  slug        String   @unique
  description String
  price       Float
  duration    Int      @default(1) // months
  image       String?
  category    String
  features    String[]
  stock       Int      @default(999)
  isActive    Boolean  @default(true)
  isPopular   Boolean  @default(false)
  requiresAge Boolean  @default(false) // for adult content
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orderItems    OrderItem[]
  subscriptions Subscription[]
  reviews       Review[]

  @@map("products")
}

enum OrderStatus {
  PENDING
  PROCESSING
  COMPLETED
  CANCELLED
  REFUNDED
}

enum PaymentMethod {
  BANK_TRANSFER
  ONLINE
}

model Order {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  orderNumber     String        @unique
  userId          String        @db.ObjectId
  totalAmount     Float
  status          OrderStatus   @default(PENDING)
  paymentMethod   PaymentMethod @default(BANK_TRANSFER)
  paymentReceipt  String?
  invoicePdf      String?
  adminNotes      String?
  estimatedTime   String        @default("5-15 minutes")
  verifiedAt      DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  user  User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  items OrderItem[]

  @@map("orders")
}

model OrderItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  orderId   String   @db.ObjectId
  productId String   @db.ObjectId
  quantity  Int      @default(1)
  months    Int      @default(1)
  price     Float
  createdAt DateTime @default(now())

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@map("order_items")
}

model Subscription {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  userId         String   @db.ObjectId
  productId      String   @db.ObjectId
  orderId        String?
  accountDetails String? // encrypted
  startDate      DateTime
  endDate        DateTime
  isActive       Boolean  @default(true)
  reminderSent   Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@map("subscriptions")
}

enum ReferralStatus {
  PENDING
  COMPLETED
  EXPIRED
}

model Referral {
  id           String         @id @default(auto()) @map("_id") @db.ObjectId
  referrerId   String         @db.ObjectId
  referredId   String         @db.ObjectId
  rewardAmount Float          @default(100)
  status       ReferralStatus @default(PENDING)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  referrer User @relation("Referrer", fields: [referrerId], references: [id], onDelete: Cascade)
  referred User @relation("Referred", fields: [referredId], references: [id], onDelete: Cascade)

  @@map("referrals")
}

model Review {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  productId String   @db.ObjectId
  rating    Int // 1-5
  comment   String?
  isVerified Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
  @@map("reviews")
}

model Settings {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  key                   String   @unique
  value                 String
  updatedAt             DateTime @updatedAt

  @@map("settings")
}

// NextAuth.js Models for MongoDB
model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}
